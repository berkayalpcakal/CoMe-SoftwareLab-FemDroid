<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:id="@+id/layout_generatemesh">


    <Button
        android:id="@+id/btnApproveMesh"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_check_black_40dp" />

    <Button
        android:id="@+id/btnGeneratMesh"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnApproveMesh"
        android:drawableEnd="@drawable/ic_widgets_black_24dp" />

    <TextView
        android:id="@+id/textViewElementSizeX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:text="\nDivision in X:\t"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/editText_ElementSizeX"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textViewElementSizeX"
        android:text="2"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textViewElementSizeY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewElementSizeX"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-44dp"
        android:layout_toEndOf="@+id/editText_ElementSizeX"
        android:text="\nDivision in Y:\t"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/editText_ElementSizeY"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textViewElementSizeY"
        android:text="2"
        android:textSize="17dp" />

</RelativeLayout>